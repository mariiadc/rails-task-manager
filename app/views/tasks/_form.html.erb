<%= form_for(@tasks) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, rows: 4, class: 'form-control' %>
  </div>

  <% if action_name == "new" %>
    <%= f.submit "Add task", class: 'btn btn-primary' %>
  <% else %>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
<% end %>
